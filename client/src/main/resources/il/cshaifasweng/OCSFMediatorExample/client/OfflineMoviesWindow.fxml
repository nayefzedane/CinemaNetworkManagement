<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<StackPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.OfflineMoviesController" stylesheets="@OfflineMovies.css">

    <!-- כל שאר החלון הראשי -->
    <ScrollPane fitToWidth="true">
        <VBox spacing="25" alignment="center">
            <!-- תוכן החלון הראשי -->
            <!-- כותרת ראשית לחלון -->
            <Text text="Movies Page" styleClass="label-title"/>

            <!-- תוצאות הסרטים הזמינים -->
            <VBox spacing="15" alignment="center">
                <Text text="סרטים זמינים" styleClass="label-header"/>
                <TilePane fx:id="movieTilePane" hgap="15" vgap="15" alignment="center" styleClass="movie-tile-pane"/>
            </VBox>

            <!-- אזור לסרט הקרוב עם אפשרות מעבר בין סרטים -->
            <VBox spacing="25" alignment="center">
                <HBox fx:id="upcomingMovieBox" alignment="center" spacing="25">
                    <Button fx:id="prevButton" text="◀" onAction="#showPreviousUpcomingMovie" styleClass="nav-button"/>
                    <VBox alignment="center" spacing="10">
                        <ImageView fx:id="upcomingMovieImage" fitHeight="300" fitWidth="200" styleClass="upcoming-movie-image"/>
                        <Text fx:id="upcomingMovieTitle" styleClass="upcoming-movie-title"/>
                        <Text fx:id="upcomingMovieDate" styleClass="upcoming-movie-date"/>
                    </VBox>
                    <Button fx:id="nextButton" text="▶" onAction="#showNextUpcomingMovie" styleClass="nav-button"/>
                </HBox>
            </VBox>
        </VBox>
    </ScrollPane>

    <!-- כפתור החיפוש בפינה הימנית העליונה -->
    <Button fx:id="searchButton" text="🔍" onAction="#toggleSearchWindow" styleClass="search-icon" StackPane.alignment="TOP_RIGHT"/>

    <!-- חלון החיפוש -->
    <VBox fx:id="searchWindow" spacing="10" maxWidth="250" maxHeight="250" styleClass="search-window" visible="false" managed="false" StackPane.alignment="TOP_RIGHT" translateY="60">
        <TextField fx:id="searchField" promptText="חפש לפי שם סרט" styleClass="search-field" maxWidth="200"/>
        <ComboBox fx:id="cinemaComboBox" promptText="בחר קולנוע" styleClass="combo-box" maxWidth="200"/>
        <DatePicker fx:id="startDatePicker" promptText="תאריך התחלה" styleClass="date-picker" maxWidth="200"/>
        <DatePicker fx:id="endDatePicker" promptText="תאריך סיום" styleClass="date-picker" maxWidth="200"/>
        <ComboBox fx:id="genreComboBox" promptText="בחר ז'אנר" styleClass="combo-box" maxWidth="200"/>
        <Button text="אפס" onAction="#resetDates" styleClass="reset-button" maxWidth="200"/>
        <Button text="בצע חיפוש" onAction="#searchMovies" styleClass="nav-button" maxWidth="200"/>
    </VBox>

</StackPane>
