<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.AdminController" style="-fx-background-color: #34495e;">

    <!-- Top section with title -->
    <top>
        <HBox alignment="CENTER" style="-fx-padding: 20px;">
            <Text text="Cinema Admin - Haifa Branch" style="-fx-fill: #ecf0f1;">
                <font>
                    <Font name="Arial Black" size="36"/>
                </font>
            </Text>
        </HBox>
    </top>

    <!-- Center section with buttons -->
    <center>
        <VBox spacing="20" alignment="CENTER" style="-fx-padding: 20px;">
            <HBox spacing="20" alignment="CENTER">
                <Button text="Tickets Report" onAction="#handleGoTo" style="-fx-font-size: 18px; -fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 10px 20px;"/>
                <Button text="Online Movies Report" onAction="#handleGoTo" style="-fx-font-size: 18px; -fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 10px 20px;"/>
            </HBox>
            <HBox spacing="20" alignment="CENTER">
                <Button text="Packages Report" onAction="#handleGoTo" style="-fx-font-size: 18px; -fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 10px 20px;"/>
                <Button text="Complaints Report" onAction="#handleGoTo" style="-fx-font-size: 18px; -fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 10px 20px;"/>
            </HBox>
        </VBox>
    </center>

    <!-- Bottom section with Return button -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-padding: 20px;">
            <Button text="Return" onAction="#handleReturn" style="-fx-font-size: 18px; -fx-background-color: #e74c3c; -fx-text-fill: white; -fx-padding: 10px 20px;"/>
        </HBox>
    </bottom>

</BorderPane>
