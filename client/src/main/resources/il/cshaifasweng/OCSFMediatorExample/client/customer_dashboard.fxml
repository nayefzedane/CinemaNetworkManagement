<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.CustomerController">

    <!-- ScrollPane עוטף את אזור התוכן המרכזי, רק גלילה אנכית -->
    <ScrollPane fx:id="mainScrollPane" fitToHeight="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" style="-fx-background-color: #121212;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="60.0">
        <VBox spacing="30.0" style="-fx-padding: 20 30 20 30;">
            <!-- בלוק עליון להצגת הסרטים הקרובים ביותר לצפייה -->
            <VBox>
                <Label styleClass="section-title" text="Close to Watching" />
                <HBox fx:id="closeToWatchingBox" alignment="CENTER_LEFT" spacing="20.0">
                    <ImageView fx:id="movie1" fitHeight="180.0" fitWidth="120.0" />
                    <ImageView fx:id="movie2" fitHeight="180.0" fitWidth="120.0" />
                    <ImageView fx:id="movie3" fitHeight="180.0" fitWidth="120.0" />
                    <!-- כאן יופיעו התמונות של הסרטים הקרובים לצפייה -->
                </HBox>
            </VBox>

            <!-- אזור להצגת רשימות נוספות -->
            <VBox>
                <Label styleClass="section-title" text="My List" />
                <GridPane fx:id="contentGrid" alignment="CENTER_LEFT" hgap="20.0" vgap="40.0">
                    <!-- כרטיסי סרטים -->
                    <ImageView fx:id="movie4" fitHeight="180.0" fitWidth="120.0" />
                    <ImageView fx:id="movie5" fitHeight="180.0" fitWidth="120.0" />
                    <ImageView fx:id="movie6" fitHeight="180.0" fitWidth="120.0" />
                    <!-- כאן יופיעו שאר התמונות והכפתורים -->
                </GridPane>
            </VBox>
        </VBox>
    </ScrollPane>

    <!-- תפריט צדדי שממוקם בצד השמאלי, ממוקם לאחר ScrollPane כדי להופיע מעליו -->
    <VBox fx:id="sidebar" prefWidth="250.0" spacing="10.0" styleClass="sidebar" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
        <VBox spacing="20.0" style="-fx-padding: 100 0 0 0;">
            <Button fx:id="goToHomeButton" styleClass="sidebar-button" text="Home" />
            <Button fx:id="goToLoginButton" styleClass="sidebar-button" text="Login" />
        </VBox>
    </VBox>

    <!-- כפתור התפריט עם אייקון של שלושה קווים ממוקם למעלה -->
    <Button fx:id="menuButton" layoutX="14.0" layoutY="14.0" onAction="#toggleMenu" styleClass="hamburger-button" text="☰" AnchorPane.leftAnchor="14.0" AnchorPane.topAnchor="14.0" />

</AnchorPane>
